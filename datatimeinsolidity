pragma solidity ^0.4.17;

contract Contract {

    struct balance{

    uint amount;
    uint day;

    }
    
    mapping (uint => balance) balances;

    function set(uint _uint,uint interest,uint _amount) public {
        
        balances[_uint].amount = _amount;
        balances[_uint].amount = (balances[_uint].amount* (interest/100) + balances[_uint].amount);
        balances[_uint].day = now + 1 days;

//seconds,minutes,hours,days

    }
    
    function get(uint _uint) view public returns (uint,uint,uint){
        
        return (balances[_uint].amount,balances[_uint].day,now);
        
    }
}
